@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactPage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "_LayoutWithBreadcrumb.cshtml";
}
    <section class="contact-us">
            <div class="container">
                <div class="cards">
                    <div class="icon">
                        <i class="fa-solid fa-location-dot"></i>
                    </div>
                    <div class="cardinfo">
                        <h6>Visit us</h6>
                        <p>Sveavägen 31</p>
                        <p>111 34 STOCKHOLM</p>
                    </div>
                </div>
                <div class="cards">
                    <div class="icon">
                        <i class="fa-solid fa-phone" style="color: #120c0c;"></i>
                    </div>
                    <div class="cardinfo">
                        <h6>Call us</h6>
                        <p>+46 (8) 121 470 60</p>
                        <p>+46 (8) 121 470 51</p>
                    </div>
                </div>
                <div class="cards">
                    <div class="icon">
                        <i class="fa-solid fa-envelope" style="color: #0c0d0d;"></i>
                    </div>
                    <div class="cardinfo">
                        <h6>Email us</h6>
                        <p>info@crito.com</p>
                        <p>support@crito.com</p>
                    </div>
                </div>
            </div>
        </section>
        <section class="contact-form">
            <div class="container">
                <div class="contact-form-header">
                    <h2>Leave us a message<br> for any information.</h2>
                </div>
                
                 @using (Html.BeginUmbracoForm("Index", "Contact", FormMethod.Post))
                 {
                   <div asp-validation-summary="All"></div>
            
            <label for="name" ></label>
            <input asp-for="@contactForm.Name"type="text" class="form-control" id="name" placeholder="Your Name*"/>
            
            <label for="email"></label>
            <input asp-for="@contactForm.Email" type="email" class="form-control" id="email" placeholder="Email*" />
            
            <label for="message"></label>
            <div>
                <textarea asp-for="@contactForm.Message" type="text" placeholder="Write your message here" class="form-control" id="message" rows="5"></textarea>
            </div>

            <div>
                <button type="submit" class="btn btn-features">Send</button>
            </div>
                 }
                
            </div>
        </section>
        <section class="google-map">
            <div class="container">
                <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2034.7793860707923!2d18.062010500000003!3d59.336636999999996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f9d6799554e87%3A0x6562d2c842903003!2sSveav%C3%A4gen%2031%2C%20111%2034%20Stockholm!5e0!3m2!1sen!2sse!4v1694527438828!5m2!1sen!2sse"
                    width="800" height="600" style="border:0;" allowfullscreen="" loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </section>